  <!-- Page Content -->
  <div class="container">
    <div class="row">
      <!-- Post Content Column -->
      <div class="col-lg-8">
        <!-- Title -->
        <h1 class="mt-4"><%= @event.title %></h1>
        <!-- Author -->
        <p class="lead">
          De
          <a href="#">BogotApp</a>
        </p>
        <hr>
        <!-- Date/Time -->
        <p>Postedo <%= @event.publication_date %></p>
        <hr>
        <!-- Preview Image -->
        <%= image_tag (@event.img_url), class: "img-fluid rounded" %>
        <hr>
        <!-- Post Content -->
        <%= raw @event.description %>
        <hr>
        <%= render 'comment' %>      
      </div>

      <!-- Sidebar Widgets Column -->
      <div class="col-md-4">

        <!-- Side Widget -->
        <div class="card my-4">
          <h5 class="card-header">Datos</h5>
          <div class="card-body">
            <ul>
              <li>Precio: <%= link_to @event.price, class: "btn-link btn" %></li>         
              <li>Categoria: <%= link_to @event.category, class: "btn btn-link" %></li>
              <li>Termina: <%= link_to @event.terminated_event, class: "btn btn-link" %></li>
              <li>Ubicacion: <%= link_to @event.address %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container -->

